#!/usr/bin/env bash

DEFAULT_NAME="projet"
G=false
S=false
B=false
A=false

help () {
   echo "usage: code-html [--help] [-g | --git] [-s | --sass] [-b | --bootstrap] [-a | --awesome] <folder>"
   echo "Create a project with an html structure and open it with Visual Studio Code."
}

check_folder () {
    if [ -z "$1" ] || [[ "${@: -1}" == -* ]]; then
        FOLDER=$DEFAULT_NAME
    else
        FOLDER="${@: -1}"
    fi
}

opts_flag () {
    while getopts "gsba-:" opt; do
        case "$opt" in
            -)
                case ${OPTARG} in
                    help)      help
                               exit ;;
                    git)       G=true ;;
                    sass)      S=true ;;
                    bootstrap) B=true ;;
                    awesome)   A=true ;;
                esac ;;
            g) G=true ;;
            s) S=true ;;
            b) B=true ;;
            a) A=true ;;
            *) : ;;
        esac
    done
}

html_project () {
    mkdir "$FOLDER"
    cd "$FOLDER"
    mkdir -p assets/{css,img}
    touch index.html assets/css/style.css
}

add_git () {
    git init ./
    if [[ "$OSTYPE" == "darwin"* ]]; then
        echo ".DS_Store" >> .gitignore
    fi
    if [ "$A" = true ] || [ "$B" = true ] ; then
        echo "node_modules" >> .gitignore
        mkdir docs
        # echo "#"$FOLDER >> docs/README.md
    fi
}

add_sass () {
    mkdir -p assets/sass
    touch assets/sass/style.sass
    # sass --watch src/sass/style.sass public/css/style.css
    if [ "$G" = true ] ; then
        echo "style.css.map" >> .gitignore
    fi
    if [ "$B" = true ] ; then
        touch assets/sass/bootstrap.sass
        touch assets/sass/_variables.sass
        if [ "$G" = true ] ; then
            echo "bootstrap.css.map" >> .gitignore
        fi
    fi
}

add_awesome () {
    npm install @fortawesome/fontawesome-free
}

add_bootstrap () {
    npm install @popperjs/core@^2.5.4
    npm install bootstrap@next
}

opts_flag "$@"
check_folder "$@"
html_project

if [ "$B" = true ] || [ "$A" = true ] ; then
    npm init -y
fi
if [ "$B" = true ] ; then
    add_bootstrap
fi
if [ "$A" = true ] ; then
    add_awesome
fi
if [ "$G" = true ] ; then
    add_git
fi
if [ "$S" = true ] ; then
    add_sass
fi

code ./
